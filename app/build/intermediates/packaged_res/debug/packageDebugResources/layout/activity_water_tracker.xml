<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="17dp"
    android:background="@color/fitsnapbg">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Water Tracker"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/ProgressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 / 2500 ml"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:max="2500"
        android:progress="0" />

    <LinearLayout
        android:id="@+id/quickButtonsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnAdd250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#70E074"
            android:text="+250 ml"
            android:textSize="18sp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAdd500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#55DE5B"
            android:text="+500 ml"
            android:textSize="18sp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_purple"
            android:text="Reset"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/customRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/CustomMl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="Custom ml (e.g., 150)"
            android:textSize="18sp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_purple"
            android:text="Add"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goalRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/Goal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="Set daily goal (ml)"
            android:textSize="18sp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_purple"
            android:text="Set Goal"
            android:textSize="18sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvMotivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stay hydrated, stay focused ðŸ’ª"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginTop="18dp"
        android:gravity="center" />

</LinearLayout>
