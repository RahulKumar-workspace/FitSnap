<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/fitsnapbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to stay on track today?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="#333"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_water_tracker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Water Tracker ðŸ’§"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="18dp"
            app:cornerRadius="12dp"
            />


        <Button
            android:id="@+id/btn_bmi_calculator"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BMI Calculator âš–ï¸"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="18dp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/btn_dish_analysis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Dish Analysis ðŸ½ï¸"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="12dp"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F44336"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/logout"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/tip_background"
            android:gravity="center"
            android:padding="12dp"
            android:text="Tip of the day"
            android:textColor="#1B5E20"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
